
@{
    ViewBag.Title = "Index";
}


<div class="d-flex flex-column gap-4">
    <header style="display: flex;">
        <h2>Jobs</h2>
        <div style="top: 10px; right: 10px; margin-left: auto">
            <button type="submit" class="btn btn-primary w-100 px-5" onclick="location.href='@Url.Action("Create", "Jobs")'">Create job</button>
        </div>
    </header>

    <ul class="m-0 p-0"
        style="list-style: none">

        <li style=""
            class="rounded-2 p-4 border hover-pointer cursor-pointer">
            <div>
                <div class="d-flex justify-content-between">
                    <div>
                        <h3 style="font-size: 20px; font-weight: 700">Job Title</h3>
                        <h4 style="font-size: 16px">Company name</h4>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-outline-info w-100">Apply</button>
                    </div>
                </div>
                <div style="width: 100%; height: 1px; background-color: gray;" class="my-3"></div>
                <div class="d-flex gap-5"
                     style="color: gray">
                    <div>
                        <p style="font-weight: 500">Expirience: <span style="font-weight: 400">3 years</span></p>
                    </div>
                    <div>
                        <p style="font-weight: 500">Work mode: <span style="font-weight: 400">Part time</span></p>
                    </div>
                </div>
            </div>
        </li>
    </ul>
</div>

<style>
    .cursor-pointer:hover {
        cursor: pointer;
    }
</style>

